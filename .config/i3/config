        active_workspace   #293a2d #34663e #ffffff
        inactive_workspace #012608 #012608 #526d5f
        urgent_workspace   #0a6337 #3be27b #16211a
    }
    # i3bar position
    position top
    # workspace buttons
    workspace_buttons no
    # Using custom i3status.conf
    status_command $HOME/.scripts/i3-conky
}
