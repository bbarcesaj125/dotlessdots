! My Urxvt config

! Xft settings
Xft.dpi:                    96
Xft.antialias:              true
Xft.rgba:                   rgb
Xft.hinting:                true
Xft.hintstyle:              hintslight

! True transparency
!URxvt.depth: 32
URxvt.background: #23292B

! Disable scrollbar
URxvt.scrollBar: false
URxvt.internalBorder: 0
URxvt.externalBorder: 0

! Font declaration
*.font: xft: Roboto Mono for Powerline:pixelsize=12
!URxvt.boldFont: xft: Roboto Mono for Powerline:pixelsize=12:bold
!URxvt.italicFont: xft:Roboto Mono for Powerline:pixelsize=12:italic
!URxvt.bolditalicFont: xft:Roboto Mono for Powerline:pixelsize=12:bold:italic
!URxvt*letterSpace: -2

! Clickable URLs + Tab support (disabled for now)
URxvt.perl-ext-common: default,matcher
URxvt.url-launcher: chromium
URxvt.matcher.button: 1

! Icon file
! URxvt.iconFile: /usr/share/icons/Faenza/apps/32/xterm.png

! Blinking cursor
URxvt.cursorBlink: 1

! Scroll settings
URxvt*scrollTtyOutput:      false
URxvt*scrollWithBuffer:     true
URxvt*scrollTtyKeypress:    true

